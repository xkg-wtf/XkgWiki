@using XkgWiki.Domain
@{
    var pageModel = (Page) ViewBag.Page;
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4">Edit page</h1>

    <form method="POST" asp-area="" asp-controller="Pages" asp-action="Edit" asp-route-url="@pageModel.Id">
        <div class="form-group form-check">
            <input type="text" class="form-control" id="title" name="title" value="@pageModel.Title">
            <label class="form-check-label" for="title">Title</label>
        </div>
        <div class="form-group form-check">
            <textarea class="form-control" id="text" name="text">@pageModel.Text</textarea>
            <label class="form-check-label" for="text">Text</label>
        </div>

        <div class="form-group form-check">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </form>
</div>